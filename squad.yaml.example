# Example squad.yaml

# This is an example configuration file for AI-Squad.
# Copy this to your project root as squad.yaml and customize as needed.

project:
  # Project name (used in documentation)
  name: My Project
  
  # GitHub repository info (auto-detected from git remote if not specified)
  github_repo: null  # e.g., "my-repo"
  github_owner: null  # e.g., "myusername"

# Agent configuration
agents:
  # Product Manager
  pm:
    enabled: true
    model: gpt-4  # Options: gpt-4, gpt-3.5-turbo
  
  # Architect
  architect:
    enabled: true
    model: gpt-4
  
  # Engineer
  engineer:
    enabled: true
    model: gpt-4
  
  # UX Designer
  ux:
    enabled: true
    model: gpt-4
  
  # Reviewer
  reviewer:
    enabled: true
    model: gpt-4

# Output directory configuration
output:
  prd_dir: docs/prd          # Product Requirements Documents
  adr_dir: docs/adr          # Architecture Decision Records
  specs_dir: docs/specs      # Technical Specifications
  ux_dir: docs/ux            # UX Designs
  reviews_dir: docs/reviews  # Code Reviews

# GitHub integration settings
github:
  # Automatically create feature issues from epics
  auto_create_issues: true
  
  # Automatically create pull requests (experimental)
  auto_create_prs: false
  
  # Label mappings for issue types
  labels:
    epic: type:epic
    feature: type:feature
    story: type:story
    bug: type:bug
    spike: type:spike
    docs: type:docs

# Production skills configuration
skills:
  # Use all skills (recommended)
  - all
  
  # Or specify individual skills:
  # - core-principles
  # - testing
  # - error-handling
  # - security
  # - performance
  # - database
  # - scalability
  # - code-organization
  # - api-design
  # - configuration
  # - documentation
  # - version-control
  # - type-safety
  # - dependency-management
  # - logging-monitoring
  # - remote-git-operations
  # - ai-agent-development
  # - code-review-and-audit

# Quality thresholds (used by Engineer and Reviewer agents)
quality:
  # Minimum test coverage required (%)
  test_coverage_threshold: 80
  
  # Test pyramid distribution (should sum to 100)
  test_pyramid:
    unit: 70         # Unit tests percentage
    integration: 20  # Integration tests percentage
    e2e: 10          # End-to-end tests percentage

# Performance requirements (used in specifications)
performance:
  response_time_p95_ms: 200    # 95th percentile response time
  throughput_req_per_sec: 1000 # Minimum requests per second
  concurrent_users: 100        # Expected concurrent users

# Accessibility standards (used by UX Designer)
accessibility:
  wcag_version: "2.1"    # WCAG version (2.0, 2.1, 2.2)
  wcag_level: "AA"       # Compliance level (A, AA, AAA)
  contrast_ratio: 4.5    # Minimum contrast ratio for text

# Responsive design breakpoints (used by UX Designer)
design:
  breakpoints:
    mobile: "320px-767px"
    tablet: "768px-1023px"
    desktop: "1024px+"
  touch_target_min: "44px"  # Minimum touch target size

